            <div class="col-lg-6">
              <div class="card">
                <div class="card-header border-0">
                  <h3 class="card-title">Purchased Courses</h3>
                </div>
                <div class="card-body table-responsive p-0">
                  <table class="table table-valign-middle">
                    <thead>
                      <tr>
                        <th>Course Name</th>
                        <th>Progress</th>
                        <th class="text-right">View</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#if userCourses}}
                      {{#each userCourses}}
                      <tr class="{{#unless this.unlock}}event-none{{/unless}}">
                        <td>
                          {{#unless started}}
                          <button type="button" class="btn p-0 text-blue" id="start" {{#if
                            this.unlock}}data-toggle="modal" data-target="#modal-default" data-banner="{{this.banner}}"
                            data-link="/dashboard/view-course/{{this._id}}" {{/if}}>
                            {{this.name}}
                          </button>
                          {{else}}
                          <a class="text-capitalize" {{#if this.unlock}}href="/dashboard/view-course/{{this._id}}"
                            {{else}} href="#" {{/if}}>{{this.name}}</a>
                          {{/unless}}
                        </td>
                        <td>
                          <div class="progress progress-xs">
                            <div class="progress-bar progress-bar-danger"
                              style="width: {{lookup ../progress this.name}}%"></div>
                          </div>
                        </td>
                        <td class="text-right">
                          {{#unless started}}
                          <button type="button" class="btn p-0 text-muted" id="start" {{#if
                            this.unlock}}data-toggle="modal" data-target="#modal-default"
                            data-link="/dashboard/view-course/{{this._id}}" data-banner="{{this.banner}}" {{/if}}>
                            {{#unless this.unlock}}
                            <i class="fa-solid fa-lock"></i>
                            {{else}}
                            <i class="fas fa-book"></i>
                            {{/unless}}
                          </button>
                          {{else}}
                          <a {{#if this.unlock}}href="/dashboard/view-course/{{this._id}}" {{else}} href="#" {{/if}}
                            class="text-muted">
                            {{#unless this.unlock}}
                            <i class="fa-solid fa-lock"></i>
                            {{else}}
                            <i class="fa-solid fa-book"></i>
                            {{/unless}}
                          </a>
                          {{/unless}}
                        </td>
                      </tr>
                      {{/each}}{{else}}
                      <tr>
                        <td colspan="3">You haven't purchased any course yet.</td>
                      </tr>
                      {{/if}}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
