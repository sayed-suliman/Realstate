{{>header}}

<body>
    <main class="login-page py-5">
        <div class="container">

            <div class="card">
                <h2 class="fw-bold text-center">Get Free Access Lesson</h2>
                <!-- <p class="m-0 mb-3">Already Registered?</p> -->
                <p class="m-0 text-center mb-5"><i class="fa-regular fa-circle-question"></i> Do you want to try a free
                    real estate course?</p>
                {{#if error}}
                <p class="fs-16 text-danger text-center">{{error}}</p>
                {{/if}}
                <div class="px-3 my-3">
                    <form action="/free-lesson" method="post" id="login-form">
                        <div class="row justify-content-center">
                            <div class="col-12 col-xxl-4 col-xl-4 col-lg-4 col-md-4 login mx-2 mb-4">
                                <label for="first-name" class="form-label">First Name<sup
                                        class="text-danger fs-5 fw-semibold top-0">*</sup></label>
                                <input type="text" id="first-name" class="form-control shadow-none" required
                                    name="firstName" placeholder="" value="{{#if oldData}}{{oldData.firstName}}{{/if}}">
                                {{#if errorObj}}<small
                                    class="form-text text-danger">{{errorObj.firstName}}</small>{{/if}}
                            </div>
                            <div class="col-12 col-xxl-4 col-xl-4 col-lg-4 col-md-4 login mx-2 mb-4">
                                <label for="last-name" class="form-label">Last Name<sup
                                        class="text-danger fs-5 fw-semibold top-0">*</sup></label>
                                <input type="text" id="last-name" class="form-control shadow-none" required
                                    name="lastName" placeholder="" value="{{#if oldData}}{{oldData.lastName}}{{/if}}">
                                {{#if errorObj}}<small
                                    class="form-text text-danger">{{errorObj.lastName}}</small>{{/if}}
                            </div>
                            <div class="col-12 col-xxl-4 col-xl-4 col-lg-4 col-md-4 login mx-2 mb-4">
                                <label for="email" class="form-label">Email<sup
                                        class="text-danger fs-5 fw-semibold top-0">*</sup></label>
                                <input type="email" id="email" class="form-control shadow-none" required name="email"
                                    placeholder="" value="{{#if oldData}}{{oldData.email}}{{/if}}">
                                {{#if errorObj}}<small class="form-text text-danger">{{errorObj.email}}</small>{{/if}}
                            </div>
                            <div class="col-12 col-xxl-4 col-xl-4 col-lg-4 col-md-4 login mx-2 mb-4">
                                <label for="select" class="form-label">Lesson Type<sup
                                        class="text-danger fs-5 fw-semibold top-0">*</sup></label>
                                <select id="Select" class="form-select" style="box-shadow: none;" name="trialCourse"
                                    required>
                                    <option value="" selected disabled>Select a Lesson Type</option>
                                    {{#each courses}}
                                    <option value="{{this._id}}"{{../oldData.trialCourse}} {{#ifEquals this._id
                                        ../oldData.trialCourse}}selected{{/ifEquals}}>{{this.name}}</option>
                                    {{/each}}
                                </select>
                                {{#if errorObj}}<small
                                    class="form-text text-danger">{{errorObj.lessonType}}</small>{{/if}}
                            </div>
                            <div class="col-12 col-xxl-4 col-xl-4 col-lg-4 col-md-4 login mx-2 mb-4">
                                <label for="password" class="form-label">Password<sup
                                        class="text-danger fs-5 fw-semibold top-0">*</sup></label>
                                <input type="password" id="password" class="form-control shadow-none" required
                                    name="password" placeholder="">
                                {{#if errorObj}}<small
                                    class="form-text text-danger">{{errorObj.password}}</small>{{/if}}
                            </div>
                            <div class="col-12 col-xxl-4 col-xl-4 col-lg-4 col-md-4 login mx-2  mb-4">
                                <label for="cPassword" class="form-label">Confirm Password<sup
                                        class="text-danger fs-5 fw-semibold top-0">*</sup></label>
                                <input type="password" id="cPassword" class="form-control shadow-none" required
                                    name="cPassword" placeholder="">
                                {{#if errorObj}}<small
                                    class="form-text text-danger">{{errorObj.cPassword}}</small>{{/if}}
                            </div>
                        </div>
                        <input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response">
                        <div class="d-flex justify-content-center"><button type="submit"
                                class="btn btn-primary border-0 px-3 rounded-2 fw-semibold fs-5 mt-4">Register</button>
                        </div>
                    </form>
                </div>
            </div>


        </div>
    </main>

    <script src="https://www.google.com/recaptcha/api.js?render={{reCaptchaSiteKey}}"></script>
    <script>
        grecaptcha.ready(function () {
            grecaptcha.execute('{{reCaptchaSiteKey}}', { action: 'freeLesson-register' }).then(function (token) {
                document.getElementById('g-recaptcha-response').value = token;
            });
        });
    </script>
    {{>footer}}