    {{!-- first top section with login and signup buttons --}}
    <main class="py-5">
        <div class="container">
            <nav class="navbar">
                <div class="container justify-content-end">
                    <span class="me-2">Already Registered ?</span>
                    <a href="/" class="link-primary fw-bold" target="_top">Sign In</a>
                </div>
            </nav>
            <div class="row">
                {{#if msg.text}}
                <div class="alert {{#ifEquals msg.type " success"}} alert-success {{else}} alert-danger {{/ifEquals}}
                    alert-dismissible fade show w-50" role="alert">
                    {{{msg.text}}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {{/if}}
            </div>
            <div class="pricing">
                <div class="toggler d-flex justify-content-center mb-3" style="gap:10px">
                    <label style="user-select:none" for="priceToggle">Packages</label>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="priceToggle">
                        <label class="form-check-label" for="priceToggle">Single Course</label>
                    </div>
                </div>
                <div class="row package justify-content-center">
                    {{#if packages}}
                    {{#each packages}}
                    <div class="col-lg-3 col-md-5 p-1 text-center">
                        <div class=" package-column">
                            <h5>{{this.name}}</h5>
                            <h1 class="text-decoration-line-through">${{increaseAmount this.price}}</h1>
                            <h2>${{this.price}}</h2>
                            <div>
                                <a href="checkout?package={{_id}}" target="_top">
                                    <button class="btn btn-primary border-0 rounded-0 px-5 py-2">Enroll</button>
                                </a>
                            </div>
                            <p class="bg-primary text-white py-2 mt-2">WHO IT'S FOR</p>
                            <div>
                                {{#each whoFor}}
                                <p>{{this}}</p>
                                {{/each}}
                            </div>
                            <p class="bg-primary text-white py-2">WHAT'S INCLUDED</p>
                            <div>
                                {{#each this.whatsIncluded}}
                                <p class="text-capitalize">{{this}}</p>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{/if}}
                </div>
                <div class="row courses justify-content-center d-none">
                    {{#if courses}}
                    {{#each courses}}
                    <div class="col-lg-3 col-md-5 p-1 text-center">
                        <div class="package-column">
                            <h5 class="text-capitalize">{{this.name}}</h5>
                            <h1>${{this.price}}</h1>
                            <div class="banner">
                                <img src="../images/course/{{this.banner}}" class="img-fluid">
                            </div>
                            <div class="mt-3">
                                <a href="../checkout?course={{this._id}}">
                                    <button class="btn btn-primary border-0 rounded-0 px-5 py-2">Buy
                                        Now</button>
                                </a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{/if}}
                </div>
            </div>
        </div>
    </main>
    {{>footer}}

    <script>
        $('#priceToggle').change(function () {
            if ($('#priceToggle').prop('checked')) {
                $('.courses').removeClass('d-none')
                $('.package').addClass('d-none')
            } else {
                $('.courses').addClass('d-none')
                $('.package').removeClass('d-none')
            }

        })
    </script>